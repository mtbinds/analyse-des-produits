<% include ../partials/header %>

<div class="row">
    <h1 style="text-align:center;">Ajouter un nouveau modèle de produits</h1>
    <div style="width: 30%; margin: 20px auto;">
        <form action="/modeles" method="POST" encmodele="multipart/form-data">
            <div class="form-group">
                <label for="name">Nom</label>
                <input class="form-control" type="text" name="modele[name]" placeholder="Nom" required>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea class="form-control" type="text" name="modele[description]"
                    placeholder="Description"></textarea>
            </div>
            <div class="form-group">
                <button class="btn-lg btn-primary btn-block">Ajouter</button>
            </div>
        </form>
        <a href="/modeles">Retour aux modèles de produits</a>
    </div>
</div>

<% include ../partials/footer %>
