<%- include('../partials/header') -%>

<div class="row">

    <div class="thumbnail" style="width: 50%; margin: 25px auto;">

    <h1 style="text-align: center">Ajouter un nouveau utilisateur</h1>

    <div class="thumbnail">

        <form action="/users" method="POST" enctype="application/x-www-form-urlencoded">
            <div class="form-group">
                <input class="form-control" type="text" name="user[username]" placeholder="Nom d'utilisateur" required>
            </div>
            <div class="form-group">
                <label for="publication">Rôle</label><br>
                    <a class="btn btn-success btn-xs" data-toggle="collapse" href="#collapseExample2" role="button" aria-expanded="false" aria-controls="collapseExample2"> Dérouler <span class="glyphicon glyphicon glyphicon-arrow-down" aria-hidden="true"></span>
                    </a>
                    <br>
                    <p></p>
                    <div class="collapse" id="collapseExample2">
                    <label for="publication">Utilisateur</label>
                    <input class="form-check-input" type="radio" name="user[role]" checked="" value="utilisateur"><br>
                    <label for="publication">Agent</label>
                    <input class="form-check-input" type="radio" name="user[role]" value="agent"><br>
                    <label for="publication">Admin</label>
                    <input class="form-check-input" type="radio" name="user[role]" value="admin">
                    </div>
            </div>
            <div class="form-group">
                <input class="form-control" id="password" type="password" name="user[password]" placeholder="Mot de passe" required>
            </div>


            <input type="checkbox" onclick="Toggle()">

            <span> Voir le mot de passe</span>

            <script>
                // Change the type of input to password or text
                function Toggle() {
                    let temp = document.getElementById("password");
                     
                    if (temp.type === "password") {
                        temp.type = "text";
                    }
                    else {
                        temp.type = "password";
                    }
                }
            </script>

            <p></p>
            <p></p>

            
            <div class="form-group">
                <input class="form-control" type="text" name="user[firstname]" placeholder="Prénom" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="user[lastname]" placeholder="Nom" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="email" name="user[email]" placeholder="E-mail" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="tel" name="user[phone_number]" placeholder="Téléphone" required>
            </div>
            <div class="form-group">
                <label for="avatar">Avatar</label>
                <input class="form-control" type="file" id="avatar" name="avatar" accept="avatar/*">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Valider</button>
            </div>
        </form>
        <a href="/users">Retour aux utilisateurs</a>
    </div>
    </div>
</div>

<%- include('../partials/footer') -%>
