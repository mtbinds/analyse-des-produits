<% include ../partials/header %>

<header class="jumbotron">
    <div class="container">
        <div class="center">
            <h1><i class="fas fa-search"></i> ANALYSE DES PRODUITS</h1>
            <p><a>Problèmes</a></p>
        </div>

        <% if((typeof (currentUser) !="undefined")) {%>
            <% if((currentUser.role ==="admin") || (currentUser.role ==="agent")) {%>
                <p class="<%= typeof page !== 'undefined' && page === 'symptomes' ? 'active' : '' %>"><a class="btn btn-success btn-md pull-right"
                                                                                                         href="/problemes/new">Ajouter un nouveau problème  <span class="glyphicon glyphicon glyphicon-plus" aria-hidden="true"></span></a></p>
            <% } %>
        <% } %>

        <p>
        <form action="/problemes" method="GET" class="form-inline">
            <div class="form-group">
                <input class="searchbar" type="text" name="search" placeholder="Chercher par référence..."
                       class="form-control">
                <input type="submit" value="Chercher" class="btn btn-default col-sm-pull-left">
            </div>
        </form>
        </p>
    </div>
</header>

<div class="row text-center" style="display:flex; flex-wrap: wrap">

    <% if((typeof (currentUser) !="undefined")) {%>
        <% if((currentUser.role ==="admin") || (currentUser.role ==="agent" )) {%>
            <% problemes.forEach(probleme => { %>

                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="thumbnail">
                        <div class="caption">
                            <h4> Intitulé : <br><a> <%= probleme.name %></a></h4>
                        </div>
                        <p>
                            <a href="/problemes/<%= probleme._id %>" class="btn btn-primary">Historique du problème</a>
                        </p>
                    </div>
                </div>

            <% }); %>
        <% } %>
    <% } %>

</div>

<div class="row text-center">
    <% if (pages && pages > 0) { %>
        <ul class="pagination text-center">
            <% if (current == 1) { %>
                <li class="disabled"><a>Première</a></li>
            <% } else { %>
            <li><a href="/problemes<%if(search){%>?search=<%=search%><%}%>">Première</a></li>
            <% } %>

            <% if (current == 1) { %>
                <li class=" disabled"><a>«</a></li>
            <% } else { %>
                <li><a href="/problemes?page=<%= Number(current) - 1 %><%if(search){%>&search=<%=search%><%}%>">«</a></li>
            <% } %>

            <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
            <% if (i !== 1) { %>
                <li class=" disabled"><a>...</a></li>
            <% } %>
            <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                <% if (i == current) { %>
                    <li class="active"><a><%= i %></a></li>
                <% } else { %>
                    <li><a href="/problemes?page=<%= i %><%if(search){%>&search=<%=search%><%}%>"><%= i %></a></li>
                <% } %>
                <% if (i == Number(current) + 4 && i < pages) { %>
                    <li class=" disabled"><a>...</a></li>
                <% } %>
            <% } %>

            <% if (current == pages) { %>
                <li class="disabled"><a>»</a></li>
            <% } else { %>
                <li><a href="/problemes?page=<%= Number(current) + 1 %><%if(search){%>&search=<%=search%><%}%>">»</a></li>
            <% } %>

            <% if (current == pages) { %>
                <li class=" disabled"><a>Dernière</a></li>
            <% } else { %>
                <li><a href="/problemes?page=<%= pages %><%if(search){%>&search=<%=search%><%}%>">Dernière</a></li>
            <% } %>
        </ul>
    <% } %>
</div>





<% include ../partials/footer %>
