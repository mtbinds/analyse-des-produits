<% include ../partials/header %>

<div class="row">
    <h1 style="text-align:center;">Edition du produit</h1>
    <h3 style="text-align:center;"><a> IMEI : </a> <%=produit.imei%></h3>
    <div style="width: 30%; margin: 20px auto;">
        <form action="/produits/<%=produit._id%>/?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Nom</label>
                <input class="form-control" type="text"  name="name" value="<%=produit.name%>" required>
            </div>
            <div class="form-group">
                <label for="imei">IMEI</label>
                <input class="form-control" type="number"  name="imei" value="<%=produit.imei%>" required>
            </div>
            <div class="form-group">
                <label for="type">Type du produit</label>
                <select class="form-control" type="number" data-style="btn-info" name="type">
                    <optgroup>
                        <% types.forEach(function(type){ %>
                            <% if (type._id = produit.type.id){ %>
                              <option value="<%=type._id%>" name="option" selected> Intitulé : (<%=type.name%>) </option>
                            <% }else{ %>
                              <option value="<%=type._id%>" name="option"> Intitulé : (<%=type.name%>) </option>
                            <% } %>
                        <% }); %>
                    </optgroup>
                </select>
            </div>
            <div class="form-group">
                <label for="modele">Modèle du produit</label>
                <select class="form-control" type="number" data-style="btn-info" name="modele">
                    <optgroup>
                        <% modeles.forEach(function(modele){ %>
                            <% if (modele._id = produit.modele.id){ %>
                            <option value="<%=modele._id%>" name="option" selected> Intitulé : (<%=modele.name%>) </option>
                            <% }else{ %>
                            <option value="<%=modele._id%>" name="option"> Intitulé : (<%=modele.name%>) </option>
                            <% } %>
                        <% }); %>
                    </optgroup>
                </select>
            </div>
            <div class="form-group">
                <label for="status">Statut de traitement</label>
                <div class="form-check-inline">
                    <label for="status">Non traité</label>
                    <input class="form-check-input" type="radio" name="status"  checked="" value="Non traité">
                    <label for="status">En traitement</label>
                    <input class="form-check-input" type="radio" name="status" value="En traitement">
                    <label for="status">Traité</label>
                    <input class="form-check-input" type="radio" name="status" value="Traité">

                </div>
            </div>
            <div class="form-group">
                <label for="publication">Statut de publication</label>
                <div class="form-check-inline">
                    <label for="publication">Publié</label>
                    <input class="form-check-input" type="radio" name="publication" checked="" value="Publié">
                    <label for="publication">Non Publié</label>
                    <input class="form-check-input" type="radio" name="publication" value="Non Publié">
                </div>
            </div>
            <div class="form-group">
                <label for="availability">Date de disponibilité</label>
                <input class="form-control" type="text" id="availability" name="availability" value="<%=produit.availability.toISOString().substr(0, 10)%>" required>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea class="form-control" type="text" name="description"><%=produit.description%></textarea>
            </div>
            <div class="form-group">
                <label for="image">Images</label>
                <input class="form-control" type="file" draggable="true" id="image" name="image" accept="image/*" value="<%=produit.image%>" multiple>
            </div>

            <div class="form-group">
                <button class="btn btn-warning btn-block" type="submit"> Mise à jour <span class="glyphicon glyphicon glyphicon-edit" aria-hidden="true"></span></button>
            </div>
        </form>
        <a href="/produits">Retour aux produits</a>
    </div>
</div>

<% include ../partials/footer %>
