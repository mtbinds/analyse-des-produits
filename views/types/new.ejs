<% include ../partials/header %>

<div class="row">
    <h1 style="text-align:center;">Ajouter un nouveau type de produits</h1>
    <div style="width: 30%; margin: 20px auto;">
        <form action="/types" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Intitulé</label>
                <input class="form-control" type="text" name="type[name]" placeholder="Intitulé" required>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea class="form-control" type="text" name="type[description]"
                    placeholder="Description"></textarea>
            </div>
            <div class="form-group">
                <button class="btn-lg btn-primary btn-block">Valider</button>
            </div>
        </form>
        <a href="/types">Retour aux types de produits</a>
    </div>
</div>

<% include ../partials/footer %>
